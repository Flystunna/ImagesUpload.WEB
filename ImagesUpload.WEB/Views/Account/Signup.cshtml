@model RegisterModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register an account";
}

<div class="container" style="padding:50px;">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header" style="text-align:center;">
                <h1><i class="fa fa-home"></i> Register</h1>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <section>
                            <form id="account" asp-action="Signup" method="post">
                                <hr />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="FirstName"></label>
                                    <input asp-for="FirstName" autocomplete="off" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LastName"></label>
                                    <input asp-for="LastName"  autocomplete="off" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email"   autocomplete="off" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PhoneNumber"></label>
                                    <input asp-for="PhoneNumber"  autocomplete="off" type="number" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Gender"></label>
                                    @Html.DropDownList("Gender", new List<SelectListItem>
                                                     {
                                                         new SelectListItem() {Text = "Select Gender", Value = ""},
                                                         new SelectListItem() {Text = "Male", Value = "Male"},
                                                         new SelectListItem() {Text = "Female", Value = "Female"},
                                                         new SelectListItem() {Text = "Rather Not Say", Value = "Rather Not Say"}

                                                     }, new { @id = "Gender", @class = "form-control" })
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input  autocomplete="off" asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Register</button>
                                </div>

                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

